<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bai2Activity">
    <EditText
        android:id="@+id/edtInput1"
        android:hint="Hello Word!!!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------SD Card-------"
        android:textSize="32dp" />
    <Button
        android:onClick="savetoCard"
        android:id="@+id/btnSave"
        android:textAllCaps="false"
        android:text="Save To SdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="loadfromCard"
        android:id="@+id/btnLoad"
        android:textAllCaps="false"
        android:text="Load From SdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>